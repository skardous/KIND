# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Home page
GET     /                        		controllers.Application.index()
                                
# Events          
GET     /newevent                  		     controllers.Application.events()
GET     /eventlist               		     controllers.Application.eventlist()

POST    /newevent                  		     controllers.Application.newEvent()
GET     /newevent/:id/delete       		     controllers.Application.deleteEvent(id: Long)

GET    /newevent/:id/dateSelection           controllers.Application.dateSelection(id: Long)
POST   /newevent/:id/addDate                 controllers.Application.addDate(id:Long)
POST   /newevent/:id/removeDate              controllers.Application.removeDate(id:Long)
POST   /newevent/:id/datechanged             controllers.Application.dateChanged(id:Long)

GET    /newevent/:id/heureSelection          controllers.Application.heureSelection(id: Long)
POST   /newevent/:id/newHoraire              controllers.Application.newHoraire(id:Long)
POST   /newevent/:id/deleteHoraire           controllers.Application.deleteHoraire(id:Long)

# Edit existing event
GET     /eventEdit/:id          		     controllers.Application.edit(id:Long)
POST    /eventEdit/:id        			     controllers.Application.update(id:Long)

POST    /eventEdit/:id/updatePersonne        controllers.Application.updatePersonne(id:Long)

POST     /eventEdit/:id/addParticip          controllers.Application.addParticipant(id:Long)
POST     /eventEdit/:id/delParticip          controllers.Application.deleteParticipant(id:Long)

POST     /eventEdit/:id/checkBoxHoraire      controllers.Application.checkBoxHoraire(id:Long)
POST     /eventEdit/:id/checkBoxJour         controllers.Application.checkBoxJour(id:Long)

POST     /eventEdit/:id/sendmail             controllers.Application.sendMail(id:Long)
